#drawable/values/styles.xml 
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#2C2C2C</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="CalcButtonPrimary" parent="CalcButton">
        <item name="android:backgroundTint">#FF9800</item>
    </style>

    <style name="CalcButtonSecondary" parent="CalcButton">
        <item name="android:backgroundTint">#424242</item>
    </style>

    <style name="CalcButtonEquals" parent="CalcButtonPrimary">
        <item name="android:backgroundTint">#03DAC5</item>
